@model WebApp.Models.Results
@{ Layout = null;}

<form asp-controller="results" asp-action="details" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <div class="modal-header">
        <h4 class="modal-title">Details about @Model.Worker</h4>
    </div>

    <div>
        <div style="vertical-align: middle; text-align: center; margin-bottom: 15px; margin-top: 15px; ">
            @if (Model.Image != null)
            {
                <img style='width:450px; height:375px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Image))" />
            }
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</form>