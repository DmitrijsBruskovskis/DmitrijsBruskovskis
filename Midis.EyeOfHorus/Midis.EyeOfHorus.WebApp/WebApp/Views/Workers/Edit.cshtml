@model WebApp.Models.Workers
@{ Layout = null; }

<form asp-controller="workers" asp-action="edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    @Html.Hidden("previousFullName", Model.FullName)
    <div class="modal-header">
        <h4 class="modal-title">Worker editing</h4>
    </div>

    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="modal-body">
        <div class="form-group">
            <div class="row">
                <div class="col">
                    <label asp-for="FullName" class="control-label">Full Name</label>
                </div>
                <div class="col">
                    <span asp-validation-for="FullName" style="color: red; float:right"></span>
                </div>
            </div>
            <input type="text" asp-for="FullName" name="FullName" required class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="ImageName" class="control-label">Current Image</label>
            <input type="text" asp-for="ImageName" readonly class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Avatar" class="control-label">New Image</label>
            <input type="file" asp-for="Avatar" class="form-control" />
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" value="Save" class="btn btn-primary">Save changes</button>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>